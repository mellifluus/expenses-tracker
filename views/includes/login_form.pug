form(action='/user/login', method='post', autocomplete='off') 
  label(for='username') Username
  br
  input#username(type='text', name='username', placeholder='Username') 
  if messages
    if messages.username
      p.form-message.error #{ messages.username }
    if messages.wrongLogin
      p.form-message.error #{ messages.wrongLogin }
  br
  label(for='password') Password
  br
  input#password(type='password', name='password', placeholder='Password')
  if messages && messages.password
    p.form-message.error #{ messages.password }
  br
  input(type='submit', value='Login')
